---
import { Layout } from "../components/Layout.astro";
---

<div class="min-h-screen bg-gray-100 p-6">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-3xl font-bold mb-6 text-gray-800">Admin Dashboard</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
      <div class="bg-white rounded-2xl shadow p-4">
        <h2 class="text-lg font-semibold text-gray-700">Total Articles</h2>
        <p class="text-2xl font-bold text-indigo-600">152</p>
      </div>

      <div class="bg-white rounded-2xl shadow p-4">
        <h2 class="text-lg font-semibold text-gray-700">Active Users</h2>
        <p class="text-2xl font-bold text-indigo-600">342</p>
      </div>

      <div class="bg-white rounded-2xl shadow p-4">
        <h2 class="text-lg font-semibold text-gray-700">New Subscriptions</h2>
        <p class="text-2xl font-bold text-indigo-600">27</p>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow p-6">
      <h2 class="text-xl font-semibold mb-4 text-gray-800">Latest Articles</h2>
      <table class="w-full text-left">
        <thead>
          <tr class="text-gray-600 border-b">
            <th class="pb-2">Title</th>
            <th class="pb-2">Author</th>
            <th class="pb-2">Published</th>
            <th class="pb-2">Views</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-b hover:bg-gray-50">
            <td class="py-2">Breaking News: AI Revolution</td>
            <td class="py-2">Jane Doe</td>
            <td class="py-2">2025-05-14</td>
            <td class="py-2">1,234</td>
          </tr>
          <tr class="border-b hover:bg-gray-50">
            <td class="py-2">Economy and Market Trends</td>
            <td class="py-2">John Smith</td>
            <td class="py-2">2025-05-13</td>
            <td class="py-2">847</td>
          </tr>
          <tr class="hover:bg-gray-50">
            <td class="py-2">Tech Innovations 2025</td>
            <td class="py-2">Alice Brown</td>
            <td class="py-2">2025-05-12</td>
            <td class="py-2">653</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
